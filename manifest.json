{
  "manifest_version": 2,
  "name": "manoderecha",
  "version": "0.2",
  
  "description": "Manipulates the DOM to set the height of PDF attachments in manoderecha",
  "icons": { "16": "icon.png", "128": "icon.png" },

  "offline_enabled": true,

  "browser_action": {
    "name": "manoderecha",
    "icons": ["icon.png"],
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [ {
    "js": [ "jquery-1.11.2.min.js", "background.js", "iemagic.js", "shim.js", "jszip.js", "xlsx.js","xls.js", "popup.js"],
    "matches": [ "http://*.manoderecha.net/*", "https://*.manoderecha.net/*"]
  }],

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"

}
